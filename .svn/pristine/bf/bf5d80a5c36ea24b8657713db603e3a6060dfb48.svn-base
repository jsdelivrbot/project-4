<template>
  <div class="banner">
    <div class="banner-top-menu">
        <a href="#" class="icon icon-add-round menu-add left"></a>
        <div class="banner-split left">
            <a href="#" class="icon icon-search menu-search"></a>
        </div>
        <div class="menu-btn-group left">
