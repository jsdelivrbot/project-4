.wrapper {
    width: 100%;
    height: 100%;
    display: table;
    background: url('../../../../static/img/plant.jpg') no-repeat center center;
    background-size: cover;
    overflow: hidden;
     &::-webkit-scrollbar-track
    {
        -webkit-box-shadow: inset 0 0 8px rgba(0,0,0,0.3);
        border-radius: 3px;
        background-color: #F5F5F5;
    }
    &::-webkit-scrollbar
    {
        width: 100%;
        height: 10px; 
        background-color: #F5F5F5;
    }
    &::-webkit-scrollbar-thumb
    {
        background-color: #0DAFD5;	
    }
    .container {
        width: 400px;
        display: inline-block;
        position: relative;
        white-space: normal;
        // height: 100%;
        vertical-align: top;
        .status-menu {
            padding: 3px 0;
            text-align: center;
            font-size: 14px;
            font-weight: bold;
            color: #fff;
            &.status0 {
                background: #58BFA8;
            }
            &.status1 {
                background: #60A1ED;
            }
            &.status2 {
                background: #AFAFAF;
            }
            &.status3 {
                background: #A257E3;
            }
            &.status4 {
                background: #D29347;
            }
            &.status5 {
                background: #299D55;
            }
            &.status6 {
                background: #892924;
            }
        }
        .boardcontent {
        margin-top: 15px;
        overflow-y: auto;
        &:hover {
            
        }
        &::-webkit-scrollbar-track
        {
            -webkit-box-shadow: inset 0 0 8px rgba(0,0,0,0.3);
            border-radius: 3px;
            background-color: #F5F5F5;
        }
        &::-webkit-scrollbar
        {
            width: 10px;
            height: 100%;
            background-color: #F5F5F5;
        }
        &::-webkit-scrollbar-thumb
        {
            background-color: #0DAFD5;	
        }
        }
    }
}