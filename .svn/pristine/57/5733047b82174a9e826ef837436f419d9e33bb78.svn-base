.edit-panel {
    position: absolute;
    right: 0;
    width: 365px;
    background: #f5f5f5;
    box-shadow: -1px 0 4px rgba(0, 0, 0, .1);
    box-sizing: border-box;
    .details-panel-header {
        height: 28px;
        border-radius: 2px 0 0;
        background-color: #777;
        .details-panel-header-title {
            color: #fff;
            line-height: 28px;
            padding-left: 10px;
            position: relative;
        }
        i.icon-close {
            color: #fff;
            cursor: pointer;
            line-height: 28px;
            padding: 0 10px;
            position: absolute;
            right: 0;
            top: 0;
        }
    }
    .details-panel-fields {
        padding: 10px 0;
        background: #fff;
        border-bottom: 1px solid #ccc;
        .field-wrapper:first-child {
            margin-bottom: 10px;
        }
        .field-wrapper {
            display: inline-block;
            position: relative;
            width: 100%;
            .paragraph {
                line-height: 24px;
                margin: 0 5px;
                //height: 100px;
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap;
                padding: 6px;
                border: 1px solid transparent;
                font-size: 16px;
                cursor: pointer;
                &:hover {
                    border: 1px solid rgba(0, 0, 0, .2);
                }
            }
            .input-wrapper {
                margin: 0 5px;
                input.t-textbox {
                    width: 94%;
                    line-height: 24px;
                    overflow: hidden;
                    text-overflow: ellipsis;
                    white-space: nowrap;
                    padding: 6px;
                    border: 1px solid transparent;
                    font-size: 16px;
                    color: #333;
                }
                i.input-button-clear {
                    color: #777;
                    cursor: pointer;
                    font-size: 12px;
                    padding-top: 6px;
                    margin-right: 6px;
                    z-index: 1;
                    line-height: 24px;
                    text-align: left;
                    &:hover {
                        color: #333;
                    }
                }
            }
            .list-info {
                width: 70%;
                padding: 0 12px;
                float: left;
                text-align: right;
                color: #333;
                span {
                    display: inline-block;
                    margin-left: 12px;
                }
            }
        }
        .sel-description {
            padding-top: 5px;
            .description {
                border: 1px solid transparent;
                border-radius: 2px;
                color: #222;
                font-size: 13px;
                margin: 0 5px;
                height: 40px;
                cursor: pointer;
                &:hover {
                    border: 1px solid rgba(0, 0, 0, .2);
                }
                .description-placeholder {
                    padding: 10px;
                    font-size: 13px;
                    color: #aaa;
                }
                .description-edit {
                    textarea {
                        width: 100%;
                        height: 37px;
                        padding: 5px 5px 5px;
                        resize: none;
                        border: 1px solid #ccc;
                        &.showStyle {
                            border: none;
                            outline: none
                        }
                    }
                    .description-toolbar {
                        .btnCommon {
                            height: 28px;
                            line-height: 28px;
                            padding: 0 10px;
                            border-radius: 2px;
                            outline: none;
                            box-shadow: none;
                            color: white;
                            cursor: pointer;
                        }
                        .btnSave {
                            background: #8ab98e;
                            transition: background-color 0.3s linear 0s;
                            &:hover {
                                background: #4d8d56;
                            }
                        }
                        .btnCancel {
                            border: none;
                            background: #fff;
                            color: #1F2532;
                            transition: background-color 0.3s linear 0s;
                            &:hover {
                                color: #4d8d56;
                            }
                        }
                    }
                }
            }
        }
        .detailspane__tab-container {
            //calendar
            .calender-field {
                .po-details-pane__divider {
                    clear: both;
                    height: 0;
                    margin: 10px;
                    color: #ccc;
                }
                .po-field-wrapper {
                    display: inline-block;
                    position: relative;
                    width: 100%;
                    .po-iconrow {
                        padding: 10px;
                        clear: both;
                        .po-tooltip__wrapper {
                            float: left;
                            width: 35%;
                            &:nth-child(2) {
                                width: 65%;
                                text-align: right;
                            }
                        }
                        .po-tooltip__wrapper span.icon {
                            display: inline-block;
                            margin-right: 10px;
                            width: 30px;
                            height: 30px;
                            border-radius: 50%;
                            line-height: 30px;
                            text-align: center;
                            cursor: pointer;
                        }
                        .po-tooltip__wrapper span.icon-text {
                            border: 1px solid #9ca3aa;
                            background: #e362e3;
                            color: #fff;
                            font-size: 12px;
                        }
                        .po-tooltip__wrapper span.icon-pic {
                            border: 1px solid #9ca3aa;
                            color: #81ADDA;
                            background: #fff;
                            font-size: 16px;
                            position: relative;
                            .sel-date {
                                // width: 30px !important;
                                // height: 30px !important;
                                line-height: 30px;
                                color: #666;
                            }
                            .ivu-picker-panel-body {
                                color: #333 !important;
                            }
                        }
                        .po-tooltip__wrapper .outer-text {
                            font-size: 14px;
                            color: #333;
                        }
                        .po-tooltip__wrapper .outer-date {
                            color: #fd612c;
                            font-weight: bold;
                        }
                    }
                }
            }
            .po-field-wrapper {
                display: inline-block;
                position: relative;
                width: 100%;
                .po-tooltip__wrapper {
                    display: inline;
                    .pp-details-pane__attribute {
                        padding: 10px;
                        width: 100%;
                        &.pp-editable {
                            cursor: pointer;
                        }
                        .avatar__container {
                            margin-right: 10px;
                            margin-left: 2px;
                            margin-top: 2px;
                            width: 100%;
                            .my-avatar {
                                margin: 0 0 10px 10px;
                                width: 30px;
                                height: 30px;
                                border-radius: 100%;
                                color: #fff;
                                line-height: 30px;
                                text-align: center;
                                font-size: 14px;
                            }
                            .tz {
                                background: #58BFA8;
                            }
                            .jc,
                            .ww {
                                background: #D29347;
                            }
                            .jz,
                            .ph {
                                background: #A257E3;
                            }
                            .tj {
                                background: #4A90E2;
                            }
                            .pp-details-pane__attribute-value {
                                color: #444;
                                display: inline-block;
                                font-size: 13px;
                                line-height: 24px;
                                overflow: hidden;
                                text-overflow: ellipsis;
                                white-space: nowrap;
                                padding-left: 10px;
                                padding-top: 3px;
                            }
                        }
                    }
                }
                .pp-objectpicker {
                    margin: 0 5px;
                    .pp-input-wrapper {
                        .pp-input {
                            background-color: #fff;
                            border: 1px solid #8ab98e;
                            border-radius: 2px;
                            color: #777;
                            padding: 10px 10px 10px;
                            transition: border 0.3s linear 0s;
                        }
                        .pp-revertible-input {
                            display: block;
                            overflow-x: hidden;
                            padding-right: 28px;
                            width: 100%;
                        }
                    }
                    .pp-objectpicker__button {
                        background: transparent;
                        border: none;
                        outline: none;
                        right: 5px;
                        z-index: 999;
                        i {
                            font-size: 20px;
                        }
                    }
                    .pp-btn-inInput {
                        background: #f5f5f5;
                        border-color: #ccc;
                        border-radius: 2px;
                        color: #777;
                        cursor: pointer;
                        font-size: 13px;
                        height: 36px;
                        padding: 6px 10px;
                        position: absolute;
                        right: 6px;
                        top: 1px;
                        transition: background-color 0.3s linear 0s;
                    }
                    .pp-comboboxlist {
                        background-color: #fff;
                        border-radius: 2px;
                        box-shadow: 0 1px 4px rgba(0, 0, 0, 0.4);
                        margin-bottom: 35px;
                        max-height: 192px;
                        overflow-y: scroll;
                        padding-top: 5px;
                        position: absolute;
                        right: 0;
                        left: 5px;
                        z-index: 100;
                        .pp-comboboxlist__row {
                            &.currentBgStyle {
                                background: #ACD8AF;
                            }
                            cursor: pointer;
                            display: block;
                            overflow: hidden;
                            padding: 5px;
                            position: relative;
                            height: 40px;
                            .comboboxlist-li {
                                .my-avatar {
                                    margin: 0 0 10px 10px;
                                    width: 30px;
                                    height: 30px;
                                    border-radius: 100%;
                                    color: #fff;
                                    line-height: 30px;
                                    text-align: center;
                                    font-size: 14px;
                                }
                                .tj {
                                    background: #4A90E2;
                                }
                                .tz {
                                    background: #58BFA8;
                                }
                                .jc,
                                .ww {
                                    background: #D29347;
                                }
                                .jz,
                                .ph {
                                    background: #A257E3;
                                }
                                .comboboxlist-li-text {
                                    color: #777;
                                    display: inline-block;
                                    font-size: 13px;
                                    overflow: hidden;
                                    text-overflow: ellipsis;
                                    vertical-align: middle;
                                    white-space: nowrap;
                                    padding-top: 5px;
                                    padding-left: 10px;
                                }
                                .comboboxlist-li-image {
                                    i {
                                        color: #000;
                                    }
                                }
                            }
                            &:hover {
                                background: #e9e9e9;
                            }
                        }
                    }
                }
                .cardDate {
                    position: relative;
                    margin-left: 10px;
                    padding: 10px;
                    cursor: pointer;
                    .dateSelect {
                        .icon-calendar-date {
                            i {
                                font-size: 16px;
                                height: 20px;
                                line-height: 24px;
                                text-align: center;
                                width: 20px;
                            }
                        }
                        .icon-calendar-date-detail {
                            color: #444;
                            display: inline-block;
                            font-size: 13px;
                            line-height: 24px;
                            text-overflow: ellipsis;
                            white-space: nowrap;
                            padding-left: 10px;
                            padding-top: 1px;
                        }
                    }
                    .date-picker {
                        position: relative;
                        .date-remove {
                            position: absolute;
                            top: 5px;
                            right: 20px;
                            font-size: 16px;
                            color: #999;
                        }
                    }
                }
            }
            .edit-list {
                padding: 10px;
                cursor: pointer;
                .sel-status_info {
                    .sel-status-icon {
                        margin-left: 15px;
                        color: #777;
                        .icon-status-text {
                            padding-left: 10px;
                            font-size: 14px;
                        }
                    }
                }
                .list-objectpicker {
                    //background-color: #fff;
                    //box-shadow: 0 0 0 1px #8ab98e inset;
                    position: relative;
                    margin: 0 5px;
                    .list-input-wrapper {
                        .pp-input {
                            width: 100%;
                            background-color: #fff;
                            border: 1px solid #8ab98e;
                            border-radius: 2px;
                            box-sizing: border-box;
                            color: #777;
                            overflow-x: hidden;
                            padding: 10px 10px 8px;
                            transition: border 0.3s linear 0s;
                        }
                    }
                    .list-btn-inInput {
                        background-color: transparent;
                        border-color: #ccc;
                        border-radius: 2px;
                        color: #777;
                        cursor: pointer;
                        font-size: 13px;
                        height: 36px;
                        padding: 6px 10px;
                        position: absolute;
                        right: 1px;
                        top: 1px;
                        outline: none;
                        border: none;
                        transition: background-color 0.3s linear 0s;
                        .list-objectpicker__icon {
                            font-size: 18px;
                        }
                    }
                    .list-comboboxlist {
                        background-color: #fff;
                        border-radius: 2px;
                        box-shadow: 0 1px 4px rgba(0, 0, 0, 0.4);
                        left: 0;
                        margin-bottom: 35px;
                        max-height: 192px;
                        overflow-y: scroll;
                        padding-top: 5px;
                        position: absolute;
                        right: 0;
                        z-index: 100;
                        .list-comboboxlist__row {
                            cursor: pointer;
                            display: block;
                            overflow: hidden;
                            padding: 5px;
                            position: relative;
                            height: 40px;
                            &:hover {
                                background: rgb(238, 238, 238);
                            }
                            .list-li {
                                .list-row-image {
                                    i {
                                        padding-left: 15px;
                                        padding-top: 8px;
                                    }
                                }
                                .list-row-text {
                                    color: #777;
                                    display: inline-block;
                                    font-size: 13px;
                                    overflow: hidden;
                                    text-overflow: ellipsis;
                                    vertical-align: middle;
                                    white-space: nowrap;
                                    padding-top: 5px;
                                    padding-left: 10px;
                                }
                            }
                        }
                    }
                }
                .editPanelPlanlet {
                    padding: 10px;
                    color: #777;
                    cursor: pointer;
                    i {
                        margin-left: 5px;
                    }
                }
            }
            .attach-space {
                padding: 0 10px;
                .attach-head span {
                    display: inline-block;
                    line-height: 40px;
                    font-size: 14px !important;
                    color: #333;
                    .ivu-icon-android-attach {
                        line-height: 40px;
                        margin-right: 10px;
                        margin-left: 4px;
                        transform: rotate(45deg);
                        -ms-transform: rotate(45deg);
                        /* IE 9 */
                        -moz-transform: rotate(45deg);
                        /* Firefox */
                        -webkit-transform: rotate(45deg);
                        /* Safari å’Œ Chrome */
                        -o-transform: rotate(45deg);
                        font-size: 20px;
                    }
                }
                .attach-content {
                    padding: 0 20px;
                    .attach-upload {
                        clear: both;
                        .demo-upload-list {
                            float: left;
                            margin-right: 10px;
                            position: relative;
                            font-size: 0;
                            width: 104px;
                            height: 150px;
                            margin-bottom: 15px;
                            img {
                                width: 100%;
                                height: 124px;
                            }
                            .attach-name {
                                width: 100%;
                                line-height: 24px;
                                text-align: center;
                                font-size: 12px;
                                overflow: hidden;
                                text-overflow: ellipsis;
                                white-space: nowrap;
                            }
                            .demo-upload-list-cover {
                                display: none;
                                position: absolute;
                                top: 0;
                                bottom: 0;
                                left: 0;
                                right: 0;
                                background: rgba(0, 0, 0, .5);
                                text-align: center;
                                line-height: 150px;
                                i {
                                    color: #EEEBEB;
                                    font-size: 24px;
                                    cursor: pointer;
                                    margin: 0 12px;
                                    transition: .2s;
                                    &:hover {
                                        color: #fff;
                                        -webkit-transform: scale(1.2);
                                        -moz-transform: scale(1.2);
                                        transform: scale(1.2);
                                    }
                                }
                            }
                        }
                        .demo-upload-list:hover .demo-upload-list-cover {
                            display: block;
                        }
                        .ivu-upload {
                            vertical-align: top;
                            box-sizing: border-box;
                            position: relative;
                            margin-bottom: 24px;
                            border: none;
                            //width: 114px;
                            //height: 160px;
                            .ivu-upload-drag {
                                border: none !important;
                            }
                            .ivu-icon-arrow-up-a {
                                color: #d7dde4;
                            }
                        }
                        // .exsist-img {
                        //     display: inline-block;
                        //     img {
                        //         width: 114px;
                        //         height: 160px;
                        //         border: none;
                        //     }
                        //     p {
                        //         line-height: 18px;
                        //         width: 114px;
                        //         overflow: hidden;
                        //         text-overflow: ellipsis;
                        //         white-space: nowrap;
                        //         font-size: 12px;
                        //         text-align: center;
                        //     }
                        // }
                    }
                    .attach-add {
                        margin: 10px 0 25px;
                        p {
                            color: #666;
                            /*display: inline-block;*/
                            text-align: left;
                            width: 100%;
                            .ivu-icon-ios-plus-outline {
                                font-size: 16px;
                                margin-right: 10px;
                            }
                        }
                        /*a:hover {
                            color: #4a90e2;
                        }*/
                    }
                }
            }
        }
    }
    //edit comments
    .edit-comments {
        padding: 20px 10px;
        .edit-newComments-container {
            border: 1px solid transparent;
            border-radius: 2px;
            font-size: 13px;
            position: relative;
            margin-top: 10px;
            &.addBorder {
                border: 1px solid #58BFA8;
            }
            .edit-smarttextarea {
                position: relative;
                .edit-comment_tip {
                    max-height: 200px;
                    //margin-top: 16px;
                    padding: 10px 0;
                    color: #aaa;
                }
                .edit-textarea {
                    width: 100%;
                    height: 36px;
                    padding: 10px;
                    font-size: 12px;
                    resize: none;
                    border: none;
                    display: block;
                    position: relative;
                    overflow: hidden;
                }
            }
            .edit-newComments-belt {
                overflow: hidden;
                background: #f8f8f8;
                .edit-belt-container {
                    padding-top: 10px;
                    .belt-tooltip-wrapper {
                        display: inline-block;
                        margin-left: 10px;
                        cursor: pointer;
                    }
                }
                .edit-comments-button {
                    font-size: 14px;
                    color: #aaa;
                    margin: 8px 0;
                    padding-right: 10px;
                    cursor: pointer;
                    &:hover {
                        color: #58BFA8;
                    }
                }
            }
        }
        .comments-content {
            margin: 15px 0;
            background: #fff;
            border-radius: 3px;
            padding: 20px 20px 10px 20px;
            box-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
            .comments-content-header {
                .edit-avatar {
                    width: 30px;
                    height: 30px;
                    line-height: 30px;
                    text-align: center;
                    margin: 2px 0 10px 10px;
                    border: 1px solid #ccc;
                    border-radius: 100%;
                    font-size: 14px;
                }
                .edit-currenInfo {
                    margin-left: 10px;
                    .edit-name {
                        font-size: 12px;
                    }
                    .edit-time {
                        display: block;
                        color: #999;
                        font-size: 12px;
                    }
                }
                .icon-dots {
                    margin: 10px 10px 0 0;
                    padding: 0 10px 0;
                    cursor: pointer;
                }
            }
            .link-text {
                color: #0a7ac1;
            }
        }
    }
}