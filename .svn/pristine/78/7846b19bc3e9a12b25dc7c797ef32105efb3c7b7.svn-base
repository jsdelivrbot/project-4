.edit-panel {
  position: absolute;
  right: 0;
  width: 365px;
  height: 500px;
  background: #f5f5f5;
  box-shadow: -1px 0 4px rgba(0,0,0,.1);
  box-sizing: border-box;
  border: 1px solid red;
  .details-panel-header {
    height: 28px;
    border-radius: 2px 0 0;
    background-color: #777;
    .details-panel-header-title {
      color: #fff;
      line-height: 28px;
      padding-left: 10px;
      position: relative;
    }
    i.icon-close {
      color: #fff;
      cursor: pointer;
      line-height: 28px;
      padding: 0 10px;
      position: absolute;
      right: 0;
      top: 0;
    }
  }
  .details-panel-fields {
    padding: 10px 0;
    background: #fff;
    border-bottom: 1px solid #ccc;
    .field-wrapper {
      display: inline-block;
      position: relative;
      width: 100%;
      .paragraph {
        line-height: 20px;
        margin: 0 5px;
        max-height: 10000px;
        padding: 6px;
        border: 1px solid transparent;
        font-size: 16px;
        cursor: pointer;
        &:hover {
          border: 1px solid rgba(0,0,0,.2);
        }
      }
      .input-wrapper {
        padding-left: 5px;
        input.t-textbox {
          width:94%;
          height: 30px;
          line-height: 30px;
          padding: 2px 5px;
          background: #fff;
          color: #333;
        }
        i.input-button-clear {
          color: #777;
          cursor: pointer;
          font-size: 12px;
          padding: 4px;
          z-index: 1;
        }
      }
    }
    .sel-description {
      padding-top: 5px;
      .description {
        border: 1px solid transparent;
        border-radius: 2px;
        color: #222;
        font-size: 13px;
        margin: 0 5px;
        height: 40px;
        cursor: pointer;
        &:hover {
          border: 1px solid rgba(0,0,0,.2);
        }
        .description-placeholder {
          padding: 10px;
          font-size: 13px;
          color: #aaa;
        }
        .description-edit {
          textarea {
            width: 100%;
            height: 37px;
            padding: 5px 5px 5px;
            resize: none;
            border:1px solid #ccc;
            &.showStyle {
              border: none;
              outline: none
            }
          }
          .description-toolbar {
            .btnCommon {
              height: 28px;
              line-height: 28px;
              padding: 0 10px;
              border-radius: 2px;
              outline: none;
              box-shadow: none;
              color: white;
              cursor: pointer;
            }
            .btnSave {
              background: #8ab98e;
              transition: background-color 0.3s linear 0s;
              &:hover {
                background: #4d8d56;
              }
            }
            .btnCancel {
              border: none;
              background: #fff;
              color:#1F2532;
              transition: background-color 0.3s linear 0s;
              &:hover {
                color: #4d8d56;
              }
            }
          }
        }
      }
    }
  }
}
