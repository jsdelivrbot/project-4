/*2017-07-20 test run stylesheet*/

#po-test {
    height: 100%;
}

.toolbar>.pull-left .po-test-task-icon {
    display: inline-block;
    vertical-align: middle;
    margin-right: 20px;
}

.toolbar {
    background: #eee;
}

.toolbar a,
.po-side-list-header a,
.po-side-list-content table a {
    color: #666;
}

.toolbar>.pull-right .ivu-poptip-rel a {
    background: #fff;
    border-radius: 2px;
    margin-top: 6px;
    line-height: 24px;
    padding: 2px 8px;
    margin-left: 10px;
}

.po-test-group {
    text-align: center;
    padding-bottom: 10px;
}

.po-test-group .ivu-radio-group.ivu-radio-group-vertical {
    text-align: left;
}

.po-test-group .ivu-radio-group.ivu-radio-group-vertical .ivu-radio-wrapper {
    margin-bottom: 6px;
}

.po-pad-t10 {
    padding-top: 10px;
}

.po-test-side-list {
    width: 350px;
    height: 100%;
    background: #ededed;
    position: absolute;
    left: 0;
    top: 75px;
    border-right: 1px solid #ccc;
    box-sizing: border-box;
}

.board-view-wrap {
    height: 100%;
    position: relative;
    padding-left: 350px;
}

.board-view-wrap>.toolbar {
    padding-left: 372px;
    box-sizing: border-box;
    background: #fff;
}

.board-view-wrap>.toolbar .ivu-poptip-rel a,
.board-view-wrap>.toolbar a {
    background: #ebebeb;
}

.po-font-14 {
    font-size: 14px;
}

.po-side-list-header {
    background: #fff;
    height: 40px;
    padding: 0 10px;
}

.po-side-list-header .pull-left {
    line-height: 40px;
}

.po-header-switch>.ivu-poptip-rel>a {
    line-height: 40px;
    display: inline-block;
    margin-right: 10px;
}

.po-header-switch>.ivu-poptip-rel>a img {
    display: inline-block;
    vertical-align: middle;
}

.po-side-list-header button.pull-right {
    margin-top: 8px;
}

.po-header-switch-content {
    width: 460px;
}

.po-side-list-content {
    width: 100%;
    overflow-y: auto;
    height: calc(100% - 40px);
}

.po-side-list-content table td {
    border-bottom: 1px solid #ccc;
}

.po-side-list-content table a {
    display: block;
    padding: 8px 10px;
    font-size: 14px;
    white-space: nowrap;
}

.po-side-list-content table a .ivu-icon {
    color: #ccc;
    margin-right: 10px;
}