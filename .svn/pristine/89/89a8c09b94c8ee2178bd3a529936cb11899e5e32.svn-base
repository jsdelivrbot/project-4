
.tool {
  .container {
    width: 1200px;
    margin: 0 auto;
  }
  background: #091e37;
  vertical-align: top;
  .logo {
    margin-left: 10px;
    a {
      display: block;
      width: 180px;
      height: 30px;
      margin: 20px 0 18px 0;
      background: url('../../../../static/img/sprite.png') no-repeat;
      background-size: 100% auto;
    }
  }
  .versions {
    position: relative;
    margin: 23px 0 18px 51px;
    .selectWidth {
      width: 300px;
    }
    @media screen and (max-width:1200px) and (min-width:768px){
      .selectWidth {
        width: 160px;
      }
    }
  }
  .useFor {
    margin-left: 17px;
    .title{
      position: relative;
    }
    .title-logo {
      display: block;
      margin: 23px 0 18px 0;
      width: 100px;
      height: 35px;
      .common{
        display: block;
        margin-top: 8px;
        width: 18px;
        height: 18px;
      }
      .logo {
        cursor: pointer;
        font-size: 18px;
        &:hover {
          color: #fff;
        }
      }
      .text {
        margin-left: 10px;
        font-size: 14px;
        color: white;
      }
    }
    .status-list {
      position: absolute;
      top: 53px;
      left: 0;
      width: 200px;
      border: 1px solid #ccc;
      border-bottom: none;
      box-shadow: 0 1px #ccc;
      cursor: pointer;
      background: white;
      z-index: 999;
      li {
        padding: 6px 10px;
        border-bottom: 1px solid #ccc;
        font-size: 16px;
      }
      .currentStyle {
        background: #DEEFE0;
      }
    }
  }
  .tool-right {
    margin-right: 15px;
    .search-bar {
      position: relative;
      width: 300px;
      margin: 23px 0 18px 0;
      .search {
        display: block;
        position: absolute;
        top: 10px;
        left: 5px;
        width: 12px;
        height: 12px;
        background: url('../../../../static/img/search.png');
        cursor: pointer;
      }
      input {
        width: 300px;
        padding: 5px 20px;
        border: none;
        color: #fff;
        font-size: 12px;
        border-radius: 5px;
        background: #404651;
      }
    }
    @media screen and (max-width:1200px) and (min-width:768px){
      .search-bar {
        position: relative;
        width: 130px;
        margin: 23px 0 15px 10px;
        .search {
          display: block;
          position: absolute;
          top: 10px;
          left: 5px;
          width: 12px;
          height: 12px;
          background: url('../../../../static/img/search.png');
          cursor: pointer;
        }
        input {
          width: 130px;
          padding: 5px 20px;
          border: none;
          color: #fff;
          font-size: 12px;
          border-radius: 5px;
          background: #404651;
        }
      }
    }
    .set {
      margin: 23px 0 18px 10px;
      .set-common {
        display: inline-block;
      }
      .bell {
        width: 24px;
        height: 32px;
        background: url('../../../../static/img/bell2432.png') no-repeat;
      }
      .tj {
        width: 32px;
        height: 32px;
        line-height: 32px;
        text-align: center;
        margin-left: 10px;
        color: white;
        font-size: 18px;
        background: url('../../../../static/img/circleblue32.png') no-repeat center center;
      }
    }
  }
  &:after {
    display:block;
    clear:both;
    content:'';
    visibility: hidden;
    height:0;
  }
}
.nav {
  .nav-list {
    li {
      position: relative;
      float: left;
      padding: 10px 15px;
      font-size: 16px;
      cursor: pointer;
      border-bottom: 2px solid transparent;
      a {
        color: #333;
      }
      &:hover {
        border-bottom: 2px solid #1984c8;
      }
    }
  }
}
