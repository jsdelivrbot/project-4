  .administration {
    position: relative;
    background: #eee;
    .ad-setting {
      margin: 0 auto;
      max-width: 580px;
      min-width: 200px;
      font-size: 14px;
      .ad-setting-section {
        clear: both;
        padding-top: 10px;
        label {
          display: block;
          margin-bottom: 16px;
        }
        .ad-input-wrapper {
          .ad-input {
            background-color: #fff;
            border: 1px solid #8ab98e;
            border-radius: 2px;
            color: #777;
            padding: 10px 10px 8px;
            transition: border 0.3s linear 0s;
          }
          .ad-revertible-input {
            display: block;
            margin-top: 10px;
            overflow-x: hidden;
            padding-right: 28px;
            width: 100%;
          }
          .ad-input-button--clear {
            color: #777;
            cursor: pointer;
            font-size: 12px;
            margin-top: -13px;
            padding: 7px;
            position: absolute;
            right: 670px;
            top: 80px;
            z-index: 1;
          }
        }
        .ad-setting-buttons {
          .po-btn--primary {
            background-color: #8ab98e;
            border: medium none;
            border-radius: 2px;
            color: #fff;
            cursor: pointer;
            font-size: 13px;
            position: relative;
            transition: background-color 0.3s linear 0s;
          }
          .po-btn--medium{
            height: 28px;
            line-height: 28px;
            padding: 0 10px;
          }
        }
      }
    }
  }

